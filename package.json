{
    "name": "copilot-sentry-agent",
    "displayName": "Copilot Sentry Agent",
    "description": "Use Copilot agent to find the place of Sentry error in the codebase.",
    "version": "0.0.1",
    "publisher": "your-publisher-name",
    "engines": {
        "vscode": "^1.88.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "copilot-sentry-agent.askCopilotAgent",
                "title": "Debug UI Sentry error"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.88.0",
        "@types/node": "20.x",
        "typescript": "^5.3.3"
    }
}
